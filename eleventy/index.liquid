	<!-- Header section start -->
	<header class="header-section">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-4">
					<div class="site-logo">
						<a href="#" class="site-btn home">{{ foaf.name }}</a>
					</div>
				</div>
				<div class="col-md-8 text-md-right header-buttons">
					<a href="#publications" class="site-btn">Publications</a>
					<a href="#projects" class="site-btn">Projects</a>
					<a href="#work-experience" class="site-btn">Work Experience</a>
					<a href="#education" class="site-btn">Education</a>
				</div>
			</div>
		</div>
	</header>
	<!-- Header section end -->

	<!-- Profile section start -->
	<section class="hero-section spad">
		<div class="container-fluid">
			<div class="row">
				<div class="col-xl-10 offset-xl-1">
					<div class="row">
						<div class="col-lg-6">
							<div class="hero-text">
								<h2>{{ foaf.name }}</h2>
								<p>
									Iâ€™m a Linked Open Data, Semantic Web and Transportation researcher at <a
										href="http://idlab.technology/" target="_blank">IDLab</a>.
								</p>
								<p>
									A Colombian <img class="flag" src="img/co.png"> living in Belgium <img class="flag" src="img/be.png">.
								</p>
							</div>
							<div class="hero-info">
								<h2>General Info</h2>
								<ul>
									<li><span>Date of Birth</span>{{ foaf.birthDate }}</li>
									<li style="width: 121%;"><span class="long-email">E-mail</span><a
											href="mailto:{{ foaf.email }}">{{ foaf.email }}</a>
									</li>
									<li><span>Phone </span>{{ foaf.phone }}</li>
								</ul>
							</div>
						</div>
						<div class="col-lg-6">
							<figure class="hero-image">
								<img src="{{ foaf.img }}" alt="{{ foaf.name }}">
							</figure>
						</div>
					</div>

					<div class="social-section">
						<div class="container-fluid">
							<div class="row">
								<div class="col-xl-10 offset-xl-1">
									<div class="social-link-warp">
										<div class="social-links">
											{% for acc in foaf.account %}
											<a href="{{ acc.id }}" target="_blank"><i class="fa fa-{{ acc.provider }}"></i></a>
											{% endfor %}
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Profile section end -->

	<!-- Publications section start -->
	<section id="publications" class="resume-section spad">
		<div class="container-fluid">
			<div class="row">
				<div class="col-xl-7 offset-xl-2">
					<div class="section-title">
						<h2>Publications</h2>
					</div>
					<ul class="timeline"> 
						{% for pub in publications %}
						<li>
							<h2>{{ pub.datePublished }}</h2>
							<h3><a href="{{ pub.id }}" target="_blank">{{ pub.title }}</a></h3>
							<h5>{% for auth in pub.authors %} 
								<a style="color: indianred;" href="{{ auth.id }}" target="_blank"><span>{{ auth.name }}</span></a>,
								{% endfor %}
							</h5>
							<h4>{{ pub.publisher }}</h4>
							<p class="full-abstract">
								<span class="abstract-header">Abstract - </span>
								<span class="abstract-text">{{ pub.abstract }}</span>
								<span class="abstract-toggler"><a role="button" tabindex="0" onclick="toggleAbstract(this, false)">read less</a></span>
							</p>
							<p class="collapsed-abstract">
								<span class="abstract-header">Abstract - </span>
								<span class="abstract-text"></span>
								<span class="abstract-toggler"><a role="button" tabindex="0" onclick="toggleAbstract(this, true)">read more</a></span>
							</p>
						</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>
	</section>
